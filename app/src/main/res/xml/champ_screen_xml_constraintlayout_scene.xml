<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1500">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/rankImg"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/rank_size"
            android:layout_height="@dimen/rank_size"
            motion:layout_constraintTop_toBottomOf="@+id/champImg"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:alpha="0"
            android:scaleX="0.1"
            android:scaleY="0.1" />
        <Constraint
            android:id="@+id/champImg"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_editor_absoluteX="115dp"
            android:scaleX="0.1"
            android:scaleY="0.1"
            android:alpha="0" />
        <Constraint
            motion:layout_editor_absoluteY="710dp"
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="176dp"
            android:layout_width="wrap_content"
            android:id="@+id/textView3" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/rankImg"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/rank_size"
            android:layout_height="@dimen/rank_size"
            motion:layout_constraintTop_toBottomOf="@+id/champImg"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:alpha="1"
            android:rotationY="360" />
        <Constraint
            android:id="@+id/champImg"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_editor_absoluteX="115dp"
            android:alpha="1" />
    </ConstraintSet>
</MotionScene>