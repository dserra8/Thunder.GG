<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <ImageView
            android:id="@+id/splashArt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@drawable/akali_splash"/>

        <ImageView
            android:id="@+id/summonerIcon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ten"
            app:layout_constraintBottom_toTopOf="@+id/summonerName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/summonerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="ChiTownsFinest"
            android:textColor="#D3CCCC"
            android:textSize="26sp"
            android:textStyle="bold"
            android:background="#BF605D5D"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>